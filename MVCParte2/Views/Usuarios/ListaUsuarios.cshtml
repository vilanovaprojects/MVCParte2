
@{
    ViewBag.Title = "Lista Usuarios";
}

<h2>ListaUsuarios</h2>

@using (Html.BeginForm())
{
    <select name="selUsuarios">
        @foreach (string user in Model)
        {
            <option>@user</option>
        }
    </select>
    <br />
    <br />
    if (ViewBag.Nombre != null)
        {
            <h4 style="color:green">Usuario Seleccionado: @ViewBag.Nombre</h4>
        }
    <br />
    <br />
    <button type="submit">Seleccionar Usuarios</button>
}


@Html.ActionLink("Regresar", "Index")
